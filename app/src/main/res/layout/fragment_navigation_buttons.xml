<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:baselineAligned="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:paddingTop="5dp">

            <ImageView
                android:contentDescription="icExploreView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnExplore"
                android:src="@drawable/ic_list_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Explore"
                android:id="@+id/tvExplore"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:paddingTop="5dp">

            <ImageView
                android:contentDescription="icClock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnJobs"
                android:src="@drawable/ic_alarm_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="My jobs"
                android:id="@+id/tvJobs"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:background="?attr/colorPrimary"
            android:paddingTop="5dp">

            <ImageView
                android:contentDescription="icPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnAdd"
                android:src="@drawable/ic_add_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="New ad"
                android:id="@+id/tvAdd"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:paddingTop="5dp">

            <ImageView
                android:contentDescription="icChat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnChat"
                android:src="@drawable/ic_chat_bubble_outline_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Chat"
                android:id="@+id/tvChat"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:paddingTop="5dp">

            <ImageView
                android:contentDescription="icMyProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnProfile"
                android:src="@drawable/ic_person_outline_white_48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="My profile"
                android:id="@+id/tvProfile"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>